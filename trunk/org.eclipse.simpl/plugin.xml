<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.eclipse.simpl.adminConsole.treeItem" name="AdminConsoleTreeItem" schema="schema/org.eclipse.simpl.adminConsole.treeItem.exsd"/>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="SIMPL Category"
            id="org.eclipse.simpl.commands.category">
      </category>
      <command
            name="Admin Console"
            categoryId="org.eclipse.simpl.commands.category"
            id="org.eclipse.simpl.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.eclipse.simpl.commands.sampleCommand"
            class="org.eclipse.simpl.handlers.SimplHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="SIMPL"
               mnemonic="M"
               id="org.eclipse.simpl.menus.sampleMenu">
            <command
                  commandId="org.eclipse.simpl.commands.sampleCommand"
                  mnemonic="S"
                  id="org.eclipse.simpl.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
